{
  "name": "ims-server",
  "version": "1.0.0",
  "description": "",
  "main": "./src/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run build-ts && NODE_ENV=production node dist/server.js",
    "forever": "npm run build-ts && NODE_ENV=production forever -c 'node' dist/server.js",
    "stop": "forever stopall",
    "serve": "nodemon dist/server.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "api": "apidoc -i src/ -o apidoc/dist && node apidoc/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kesakiyo/ims-server.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kesakiyo/ims-server/issues"
  },
  "homepage": "https://github.com/kesakiyo/ims-server#readme",
  "dependencies": {
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.1",
    "compression": "^1.7.1",
    "connect-mongo": "^2.0.0",
    "cors": "^2.8.4",
    "express": "^4.15.4",
    "express-session": "^1.15.6",
    "forever": "^0.15.3",
    "http-status-codes": "^1.3.0",
    "mongoose": "^4.11.12",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "validator": "^9.1.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^1.0.0",
    "@types/body-parser": "^1.16.5",
    "@types/compression": "0.0.34",
    "@types/connect-mongo": "0.0.34",
    "@types/cors": "^2.8.2",
    "@types/express": "^4.0.37",
    "@types/express-session": "^1.15.3",
    "@types/http-status-codes": "^1.0.29",
    "@types/mongoose": "^4.7.21",
    "@types/passport": "^0.3.4",
    "@types/validator": "^6.3.0",
    "apidoc": "^0.17.6",
    "concurrently": "^3.5.0",
    "nodemon": "^1.12.0",
    "typescript": "^2.5.2"
  }
}
